{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "source_ami": "",
    "ami_name": "",
    "vpc_id": "",
    "subnet_id": "",
    "dir": "{{ env `PWD`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "t2.medium",
    "ssh_username": "core",
    "ami_name": "{{user `ami_name`}}",
    "associate_public_ip_address": true,
    "vpc_id": "{{user `vpc_id`}}",
    "subnet_id": "{{user `subnet_id`}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/base-node/remote/common-1"
    },
    {
      "type": "shell",
      "script": "scripts/base-node/remote/aws-1"
    },
    {
      "type": "file",
      "source": "{{ user `dir` }}/../.state/build/artifacts/base-node/",
      "destination": "/tmp/kubernetes/artifacts/base-node/"
    },
    {
      "type": "file",
      "source": "{{ user `dir` }}/../.state/build/artifacts/base-node/aws/",
      "destination": "/tmp/kubernetes/artifacts/base-node/aws/"
    },
    {
      "type": "shell",
      "script": "scripts/base-node/remote/common-2"
    },
    {
      "type": "shell",
      "script": "scripts/base-node/remote/aws-2"
    }
  ]
}
